{{#partial "content"}}
<div class="view" style="background-image: url('images/Amazon_jaguar.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <!-- Mask & flexbox options-->
    <div class="mask rgba-black-light align-items-center">
        <!-- Content -->
        <div class="container">
            <!--Grid row-->
            <div class="indexRow">
                <!--Grid column-->
                <div class="col-md-12 mb-4 white-text text-center">
                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a href="/animals/new"><button type="button" class="btn btn-primary">Add Animal</button></a>
                            <a href="/endangered/new"><button type="button" class="btn btn-warning">Add Endangered Animal</button></a>
                            <h3 class="hr-light text-monospace stylistsTitle text-warning">All Animals:</h3>
                            #foreach($animal in $animals)
                            <h5>
                                <a href="/animals/$animal.getId()">$animal.getName()</a> <em>($animal.getType())</em>
                                <a href="/animals/$animal.getId()/edit" class="edit"> [edit]</a>
                                <a href="/animals/$animal.getId()/delete" class="delete"> [delete]</a>
                            </h5>
                            #end
                        </div>
                    </div>
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
        </div>
        <!-- Content -->
    </div>
    <!-- Mask & flexbox options-->
</div>
{{/partial}}
{{>layout.hbs}}