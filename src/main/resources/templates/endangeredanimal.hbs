{{#partial "content"}}

    <div class="pages">
        <h2 class="text-center">Endangered Animals</h2>
    {{#if endangered}}
        <div class="card">
            <h3 class="text-center" id="wildlife-title" style="color:red;">Available Animals:</h3>
                <div class="card p-4 mt-4">
                    <table>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Health</th>
                        <th>Type</th>
                    </tr>

                    {{#each endangered}}

                        <tr>
                            <td>{{ id }}</td>
                            <td>{{ name }}</td>
                            <td>{{ age }}</td>
                            <td>{{ health }}</td>
                            <td>{{ type }}</td>
                        </tr>


                    {{/each}}
                    </table>
                </div>
            <a href="/endangered/form" class="">Report Another Endangered-Animal Sighting</a>
    {{else}}
            <p style="color:green"> No Endangered Animal .Look Around Ranger!!!!</p>
        </div>
    {{/if}}
    </div>
{{/partial}}
{{> layout.hbs}}

